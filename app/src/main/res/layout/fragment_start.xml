<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.StartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/DayPictureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:text="@string/day_picture_tv"
            android:textAlignment="center"
            android:textColor="@color/text_color_header"
            android:textSize="@dimen/text_size_header2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/DayPictureImg"
            app:layout_constraintTop_toBottomOf="@id/DayPictureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/day_picture_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>