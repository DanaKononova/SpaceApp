<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.start.StartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/DayPictureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:text="@string/day_picture_tv"
            android:textAlignment="center"
            android:textColor="@color/text_color_header"
            android:textSize="@dimen/text_size_header2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PictureTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal1"
            app:layout_constraintTop_toBottomOf="@id/DayPictureTv"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/DayPictureImg"
            app:layout_constraintTop_toBottomOf="@id/PictureTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/day_picture_tv" />

        <TextView
            android:id="@+id/PictureDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_small1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/DayPictureImg"/>

        <TextView
            android:id="@+id/PictureExplanationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toBottomOf="@id/PictureDateTv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>